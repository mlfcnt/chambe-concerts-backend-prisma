{
  "include": ["**.ts", "src/index.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "module": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true
  }
}
